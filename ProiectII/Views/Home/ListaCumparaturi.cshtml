@model IEnumerable<ProiectII.Models.Product>
@{
    ViewBag.Title = "ListaCumparaturi";
}
<link rel="stylesheet" href="~/Content/ListaCumparaturi.css" />


<div>

        <form id="form1" runat="server">

            <div class="grid-container">
                @foreach (var item in Model)
                {
                <div class="grid-item">
                    <table>
                        <tr>
                            <td>   <img class="imageClass" src="@Html.DisplayFor(modelItem => item.Image)" /></td>
                        </tr>
                        <tr>
                            <td>  @Html.DisplayFor(modelItem => item.Name)</td>
                        </tr>
                        <tr>
                            <td>  @Html.DisplayFor(modelItem => item.Price)</td>
                        </tr>
                        <tr>
                            <td>
                                <div class="AClass">
                                    @Html.ActionLink("Detalii", "Detalii", new { id = item.Id })

                                </div>
                            </td>
                        </tr>
                    </table>
                 
                 
                  
           
                </div>

                }
            </div>




        </form>

 

</div>
