@model ProiectII.Models.MyModel
@{
    ViewBag.Title = "Rapoarte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/tabel.css" />

<center><h2>Rapoarte</h2></center>
    <table id="customers">
        <tr>
            <th>
                Id
            </th>
            <th>
                Amount
            </th>
            <th>
                Date
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td class="T">
                    @Html.ActionLink("Detalii", "DetaliR", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


    @section Re{
        <div>
            @foreach (var item in Model.user)
            {
                @Html.ActionLink(@Html.DisplayFor(modelItem => item.name).ToString(), @Html.DisplayFor(modelItem => item.page).ToString())
            }
            <a href=" @Url.Action("Deconectare", "Home")">Log out</a>
        </div>
    }
